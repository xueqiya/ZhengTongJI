<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_currentday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_calendar_top"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/imageButtonDown"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />

            <RelativeLayout
                android:id="@+id/currentDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="#fff" />
                <TextView
                    android:id="@+id/textViewMY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="MARZO 2017"
                    android:textSize="15dp"
                    android:textColor="#0266b7"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/imageButtonUp"
                android:visibility="gone"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp" />


            <TextView
                android:id="@+id/tv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="设置"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#1DAEFC"
                android:textSize="15dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@id/layout_currentday"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewD"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="D"
                android:textColor="#C7C7C7" />

            <TextView
                android:id="@+id/textViewL"
                android:gravity="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L"
                android:textColor="#626262" />

            <TextView
                android:id="@+id/textViewM"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M"
                android:gravity="center"
                android:textColor="#626262" />


            <TextView
                android:id="@+id/textViewX"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X"
                android:gravity="center"
                android:textColor="#626262" />


            <TextView
                android:id="@+id/textViewJ"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J"
                android:gravity="center"
                android:textColor="#626262" />


            <TextView
                android:id="@+id/textViewV"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="V"
                android:gravity="center"
                android:textColor="#626262" />

            <TextView
                android:id="@+id/textViewS"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:gravity="center"
                android:textColor="#C7C7C7" />

        </LinearLayout>

    </RelativeLayout>

    <com.darwindeveloper.onecalendar.views.OneFrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent"
         />

</LinearLayout>