<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_topbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入您的手机号及验证码"
        android:textSize="18dp"
        android:textColor="#000"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商务社交-诚信为本"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="手机号:"
            android:textSize="16dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@null"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/et_phone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="密    码:"
            android:textSize="16dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/et_mima"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="39dp"
            android:background="@null"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/et_mima"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_hide"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/fx_icon_hide" />

            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/fx_icon_show"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/fx_bg_btn_green"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="下一步"
        android:textSize="16dp"
        android:textColor="#fff"/>

</LinearLayout>
