<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:id="@+id/tvback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="企业成员"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:text="新的员工"
            android:textColor="#000"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:text="新增"
            android:textColor="@color/accent_blue"/>
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:background="#f7f7f7"
        android:id="@+id/nav"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radioPaidan"
                android:layout_width="match_parent"
                android:text="公司派单"
                android:background="#fff"
                android:checked="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/unread_danju_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="5"
                android:textSize="10dp"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/v4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radioOffline"
                android:layout_width="match_parent"
                android:text="线下派单"
                android:background="#fff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/unread_dingdan_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="5"
                android:textSize="10dp"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_new_yuangong"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="暂无数据"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
