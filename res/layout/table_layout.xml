<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_1_1"
            android:text="功能权限"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_2_1"
            android:text="初始权限"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_3_1"
            android:text="点亮质保"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_4_1"
            android:text="同步通讯录"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_5_1"
            android:text="名片有红包"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            /><TextView
        android:id="@+id/tv_6_1"
        android:text="天天分享"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="13dp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:background="@color/white"
        android:layout_margin="1dp"
        />
        <TextView
            android:id="@+id/tv_7_1"
            android:text="坐标宝藏"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_8_1"
            android:text="加入企业"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_1_2"
            android:text="红包次数"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_2_2"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_3_2"
            android:text="+1/+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_4_2"
            android:text="+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_5_2"
            android:text="+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_6_2"
            android:text="每天+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_7_2"
            android:text="每天+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_8_2"
            android:text="同企业叠加"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_1_3"
            android:text="接单次数"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_2_3"
            android:text="1次/天"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_3_3"
            android:text="+1/+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/tv_4_3"
            android:text="+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            /><TextView
        android:id="@+id/tv_5_3"
        android:text="+1次"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="13dp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:background="@color/white"
        android:layout_margin="1dp"
        />
        <TextView
            android:id="@+id/tv_6_3"
            android:text="每天+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />

        <TextView
            android:id="@+id/tv_7_3"
            android:text="每天+1次"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />


        <TextView
            android:id="@+id/tv_8_3"
            android:text="同企业叠加"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:id="@+id/tv_1_4"
        android:text="发布权限"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="13dp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:background="@color/white"
        android:layout_margin="1dp"
        android:paddingBottom="1dp"
        />

    <TextView
        android:id="@+id/tv_2_4"
        android:text="不限\n所有功能\n模块\n免费使用\n功能\n违规一处\n禁止一处\n解禁\n违规需付款"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.2"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:background="@color/white"
        android:layout_margin="1dp"
        />
    </LinearLayout>

</LinearLayout>