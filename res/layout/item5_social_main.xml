<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f7f7"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/fx_top_bar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="动态详情"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_back"
                android:text="返回"
                android:textColor="@color/gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_delete_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/accent_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_all_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_titl"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/fx_bg_text_gra"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="张三封"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:visibility="invisible" />

                <com.sangu.apptongji.widget.CircleImageView
                    android:id="@+id/sdv_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sdv_image"
                    android:ellipsize="end"
                    android:maxWidth="100dp"
                    android:singleLine="true"
                    android:text="黄方意"
                    android:textColor="#576B95"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_nianling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_nick"
                    android:layout_alignBottom="@+id/tv_nick"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_nick"
                    android:background="@color/accent_blue"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="23"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_nick"
                    android:layout_alignBottom="@+id/tv_nick"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_distance"
                    android:layout_toRightOf="@+id/tv_nianling"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="(暂未加入企业)"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nick"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/sdv_image"
                    android:text="一分钟前"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_recommend"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nick"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/tv_from"
                    android:text="推荐 99+"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_chujia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nick"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/tv_recommend"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:singleLine="true"
                    android:text="意向价： 暂无"
                    android:textColor="@color/orange"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_nick"
                    android:layout_alignBottom="@+id/tv_nick"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="0.0km"
                    android:textColor="#CDCDCD"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black_deep"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_demandType"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_alignLeft="@+id/tv_content"
                        android:layout_alignTop="@+id/tv_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/accent_blue"
                        android:gravity="center"
                        android:text="需要服务"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_content"
                        android:layout_alignBottom="@+id/tv_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_video"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_below="@+id/description_layout"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                        android:id="@+id/videoplayer"
                        android:layout_width="match_parent"
                        android:layout_height="160dp" />

                    <TextView
                        android:id="@+id/tv_video"
                        android:layout_width="match_parent"
                        android:layout_height="160dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_layout"
                    android:maxHeight="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_one"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_7"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_8"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/ll_content"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_huikui_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp">

                    <Button
                        android:id="@+id/btn_daohang"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/fx_bg_btn_green"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="派单导航"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/btn_xiadan"
                        android:layout_toRightOf="@+id/btn_daohang"
                        android:background="@drawable/img_back"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btn_xiadan"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/fx_bg_btn_green"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="接单报价"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_huikui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_huikui1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tv_huikui_zonge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_huikui_zonge"
                            android:text="￥2.00"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_huikui_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_huikui_yue"
                            android:text="￥2.00"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_title_huikui_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@+id/tv_title_huikui_zonge"
                            android:text="红包余额:"
                            android:textColor="@color/gray"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_title_huikui_zonge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="红包总额:"
                            android:textColor="@color/gray"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_huikui2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tv_title_huikui_zhaunfa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红包金额:"
                            android:textColor="@color/gray"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_huikui_zhaunfa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_huikui_zhaunfa"
                            android:text="￥2.00"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_title_liulan_cishu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@+id/tv_title_huikui_zhaunfa"
                            android:text="红包个数:"
                            android:textColor="@color/gray"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_liulan_cishu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/tv_title_liulan_cishu"
                            android:text="1次"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/ll_huikui_detail"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_zf_pl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/textview1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_zhuanfa"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/image_shareRed"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/red_packeg"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_count_zhf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_zhf"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_title_zhf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="帮介绍:"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_content"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_liulancishu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_title_llcsh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="浏览:"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_count_llc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_llcsh"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_content"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_pinglun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_title_pl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="匹配:"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_count_pl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_title_pl"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </RelativeLayout>


                <TextView
                    android:id="@+id/textviewcomment"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_content"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_comcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_comment_pl"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_comment_pl"
