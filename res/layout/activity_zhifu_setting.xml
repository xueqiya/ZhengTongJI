<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/common_top_bar_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="设置支付密码"
            android:textColor="@color/gray"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="余额"
            android:textColor="@color/gray"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:text="支   付   密  码:"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_zhifumima"
            android:textSize="16dp"
            android:textColor="#000"
            android:inputType="numberPassword"
            android:background="@drawable/login_input"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:hint="请输入支付密码"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:text="确认支付密码:"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_querenzhifumima"
            android:textSize="16dp"
            android:textColor="#000"
            android:inputType="numberPassword"
            android:background="@drawable/login_input"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:hint="请确认支付密码"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_setzfp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="提交"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/fx_bg_btn_green"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>
