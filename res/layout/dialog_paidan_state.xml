<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="哈哈"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"

                />
            <RelativeLayout
                android:id="@+id/rl_voice_contain"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@color/accent_blue"
                android:layout_centerInParent="true"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ease_chatfrom_voice_playing_f3"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_yuyin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="点击试听"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="100dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@android:color/darker_gray"
            android:text="此条派单状态"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="(线下交易手动√变更状态)"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="1:避免不必要的打扰 2:存电子单据更有保障"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_cb_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1 价格不适合再派"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    />
                <CheckBox
                    android:id="@+id/cb_1"
                    android:layout_width="40dp"
                    android:gravity="center"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cb_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2 专业度不够再派"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    />

                <CheckBox
                    android:id="@+id/cb_2"
                    android:layout_width="40dp"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:id="@+id/ll_cb_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3 以接单正在进行"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    />
                <CheckBox
                    android:id="@+id/cb_3"
                    android:layout_width="40dp"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cb_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4 线下交易已解决"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    />
                <CheckBox
                    android:id="@+id/cb_4"
                    android:layout_width="40dp"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:id="@+id/ll_cb_5"
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5 撤销 再次派单   "
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:id="@+id/textView19" />

                <CheckBox
                    android:id="@+id/cb_5"
                    android:layout_width="40dp"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cb_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6 没找到接单人"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    />
                <CheckBox
                    android:id="@+id/cb_6"
                    android:layout_width="40dp"
                    android:scaleX="0.70"
                    android:scaleY="0.70"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="确       定"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_shap_corner_blue"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/btn_contact_kefu"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="联系客服"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:textColor="@color/accent_blue"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</RelativeLayout>