<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0.1dp"
        android:layout_marginTop="2dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="姓名"
            android:textColor="#000"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_head"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_nianling1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/accent_blue"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="23"
                android:textColor="#fff"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:src="@drawable/nan"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rl_sex"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="公司"
            android:textColor="@color/text_grey"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_company_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_company1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(0)"
            android:textColor="@color/text_grey"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginRight="5dp"
            android:text="一天前"
            android:textColor="@color/text_grey"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_sex"
            android:layout_below="@+id/rl_sex"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/ll_all_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_one1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="专业项目一"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy1_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy1_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy1_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ll_one"
                        android:text="专业项目二"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy2_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy2_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy2_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_all_one"
                android:layout_below="@+id/ll_all_one"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="专业项目三"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy3_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy3_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy3_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_all_one"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业项目四"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy4_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy4_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy4_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_sex"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_distance"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="jintianhuigenghao"
            android:textColor="@color/text_grey"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_distance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0.02km"
            android:textColor="@color/text_grey"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_titl1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/fx_bg_text_gra"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="张三封"
            android:textColor="#fff"
            android:textSize="14dp"
            android:visibility="invisible" />

        <com.sangu.apptongji.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_alignTop="@+id/tv_titl1"
            android:layout_below="@+id/tv_name"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_neirong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/rl"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_titl"
                android:visibility="invisible"
                android:background="@drawable/fx_bg_text_gra"
                android:text="张三封"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/sdv_image"
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_toRightOf="@+id/sdv_image"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="李四"
                android:textColor="#576B95"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_nianling"
                android:layout_width="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignTop="@+id/tv_nick"
                android:layout_alignBottom="@+id/tv_nick"
                android:layout_toRightOf="@+id/tv_nick"
                android:layout_height="wrap_content"
                android:background="@color/accent_blue"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10dp"
                android:ellipsize="end"
                android:textColor="#fff"
                android:text="23"/>
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/tv_nick"
                android:layout_alignBottom="@+id/tv_nick"
                android:layout_toRightOf="@+id/tv_nianling"
                android:layout_toLeftOf="@+id/tv_distance"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:textSize="14dp"
                android:ellipsize="end"
                android:textColor="@color/gray"
                android:text="(暂未加入企业)"/>

            <TextView
                android:id="@+id/tv_from"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sdv_image"
                android:layout_below="@+id/tv_nick"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="一分钟前"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="0.0km"
                android:layout_alignTop="@+id/tv_nick"
                android:layout_alignBottom="@+id/tv_nick"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#CDCDCD"
                android:textSize="14dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_content"
            android:layout_below="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <RelativeLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="8dp" >

                <TextView
                    android:id="@+id/tv_content"
                    android:maxLines="2"
                    android:text=""
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:textColor="@color/black_deep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_demandType"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignLeft="@+id/tv_content"
                    android:layout_alignTop="@+id/tv_content"
                    android:background="@drawable/btn_corner_weizhigreen"
                    android:gravity="center"
                    android:text="玩"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_alignTop="@+id/tv_content"
                    android:layout_alignBottom="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/description_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="160dp">

                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:id="@+id/videoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_below="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:maxHeight="80dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_margin="2dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_below="@+id/ll_one"
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="合肥市蜀山区黄山路105"
                android:textColor="#576B95"
                android:textSize="14dp"
                android:visibility="gone" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="删除"
                    android:textColor="#576B95"
                    android:textSize="12dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_pop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:padding="10dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/fx_icon_coment" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/ll_goodmembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/fx_icon_heart_blue" />

                    <TextView
                        android:id="@+id/tv_goodmembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="黄方意，张三，李四，王五"
                        android:textColor="#576B95"
                        android:textSize="16dp" />
