<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:windowSoftInputMode="adjustPan">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        android:background="#f7f7f7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="动态详情"
            android:textColor="@color/gray"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_delete_dynamic"
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:textColor="@color/accent_blue"
            android:text="删除"/>

    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/rl_title"
        android:layout_above="@+id/re_edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/rl_neirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_titl"
                        android:visibility="invisible"
                        android:background="@drawable/fx_bg_text_gra"
                        android:text="张三封"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_toRightOf="@+id/sdv_image"
                        android:layout_marginLeft="10dp"
                        android:maxWidth="100dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lishao"
                        android:textColor="#576B95"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_nianling"
                        android:layout_width="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_toRightOf="@+id/tv_nick"
                        android:layout_height="wrap_content"
                        android:background="@color/accent_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textSize="10dp"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:text="23"/>
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_toRightOf="@+id/tv_nianling"
                        android:layout_toLeftOf="@+id/tv_distance"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:textColor="@color/gray"
                        android:text="(暂未加入企业)"/>

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/sdv_image"
                        android:layout_below="@+id/tv_nick"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="一分钟前"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="0.0km"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#CDCDCD"
                        android:textSize="14dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/sdv_image">

                        <com.sangu.apptongji.main.widget.ExpandableTextView
                            android:id="@+id/tv_zhf_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:contentTextSize="14dp"
                            app:contentTextColor="@color/black_deep"
                            app:textCollapse="@string/shink"
                            app:showExpandCollapseDrawable="false"
                            app:textExpand="@string/expand"
                            app:maxCollapsedLines="5">
                        </com.sangu.apptongji.main.widget.ExpandableTextView>
                    </LinearLayout>

                    <com.sangu.apptongji.widget.CircleImageView
                        android:id="@+id/sdv_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_content"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:background="@color/gra">

                    <RelativeLayout
                        android:id="@+id/rl_zhf"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_zhf_titl"
                            android:visibility="invisible"
                            android:background="@drawable/fx_bg_text_gra"
                            android:text="张三封"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <com.sangu.apptongji.widget.CircleImageView
                            android:id="@+id/sdv_first_image"
                            android:layout_marginLeft="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_first_nick"
                            android:layout_toRightOf="@+id/sdv_first_image"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="5dp"
                            android:gravity="top|left"
                            android:maxWidth="100dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="lishao:"
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/tv_first_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="top|left"
                            android:text="转发内容"
                            android:textColor="#000"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_video"
                        android:layout_below="@+id/rl_zhf"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="160dp">

                        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                            android:id="@+id/videoplayer"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/ll_one"
                        android:layout_below="@+id/rl_zhf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="80dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_1"
                                android:layout_margin="2dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_two"
                        android:layout_below="@+id/ll_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_5"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_6"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_7"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_8"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ll_two"
                        android:layout_height="1dip"
                        android:background="#E6E6E6" />

                    <LinearLayout
                        android:id="@+id/ll_huikui_detail"
                        android:layout_below="@+id/textview4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:paddingLeft="12dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/item5_icon"/>
                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:maxLines="2"
                                android:textSize="13dp"
                                android:text=""
                                android:ellipsize="end"
                                android:textColor="@color/gray"
                                android:layout_toRightOf="@+id/iv_icon"
                                android:layout_toLeftOf="@+id/btn_xiadan"/>
                            <Button
                                android:layout_centerVertical="true"
                                android:id="@+id/btn_xiadan"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:textSize="14dp"
                                android:textColor="@android:color/white"
                                android:text="抢单报价"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/fx_bg_btn_green"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/ll_content"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />
                <LinearLayout
                    android:id="@+id/ll_zf_pl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_zhuanfa"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_zhf"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_zhf"
                                android:layout_toRightOf="@+id/tv_title_zhf"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="1dp"
                        android:layout_below="@+id/ll_content"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_liulancishu"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_llcsh"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="浏览:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_llc"
                                android:layout_toRightOf="@+id/tv_title_llcsh"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="1dp"
                        android:layout_below="@+id/ll_content"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_pinglun"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_pl"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报价:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_pl"
                                android:layout_toRightOf="@+id/tv_title_pl"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/ll_zf_pl"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_stickynavlayout_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/id_stickynavlayout"
                    android:scrollbars="none"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"></ListView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/re_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_send"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/fx_bg_btn_green"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="16dp" />

        <View
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/btn_send"
            android:background="#c0c0c0" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/btn_send"
            android:background="@null"
            android:gravity="center|left"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>