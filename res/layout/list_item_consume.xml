<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#000"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_titl"
                android:visibility="invisible"
                android:background="@drawable/fx_bg_text_gra"
                android:text="张三封"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:text="名称："
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv__xiangmu_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:text=""/>

            <TextView
                android:id="@+id/tv_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                android:textSize="16dp"
                android:text="总价："/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv__xiangmu_name"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingTop="2dp"
                android:layout_alignLeft="@+id/tv__xiangmu_name"
                android:text=""/>
            <TextView
                android:id="@+id/tv_jiaoyishijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_prise"
                android:layout_below="@+id/tv_prise"
                android:text="2016-8-12 15:20"
                android:paddingTop="2dp"
                android:textColor="@color/gray"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_dingdanzhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未付款"
                android:textColor="@color/red"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
