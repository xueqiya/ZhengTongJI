<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/rl_title"
            android:background="#f7f7f7" />

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="#f7f7f7" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:text="统计相关"
                android:textColor="#000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/tv_add"
                android:layout_width="20dp"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/ease_blue_add" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tongji1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="地区注册排行"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_tongji2"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="隐藏的派单"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

        </RelativeLayout>





















        <LinearLayout
            android:visibility="gone"
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">
            <RelativeLayout
                android:id="@+id/rl_friend"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_friend"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="好友"
                        android:textColor="@color/blue"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/tv_friend_count"
                        android:layout_toRightOf="@+id/tv_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="(0)"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/tv_unread_friend"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="5"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/tv_friend_count"
                        android:background="@drawable/fx_bg_text_darkred"
                        android:textColor="#fff"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_qiye"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_qiye"
                        android:layout_width="52dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#AAAAAA"
                        android:layout_centerVertical="true"
                        android:textSize="16dp"
                        android:text="企业"/>
                    <TextView
                        android:id="@+id/tv_qiye_count"
                        android:layout_toRightOf="@+id/tv_qiye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="(0)"
                        android:textColor="#AAAAAA"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/tv_unread_qiye"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="5"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/tv_qiye_count"
                        android:background="@drawable/fx_bg_text_darkred"
                        android:textColor="#fff"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_qunzu"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_qunzu"
                        android:layout_width="52dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#AAAAAA"
                        android:layout_centerVertical="true"
                        android:textSize="16dp"
                        android:text="群组"/>
                    <TextView
                        android:id="@+id/tv_qunzu_count"
                        android:layout_toRightOf="@+id/tv_qunzu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="(0)"
                        android:textColor="#AAAAAA"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/tv_unread_qunzu"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="5"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/tv_qunzu_count"
                        android:background="@drawable/fx_bg_text_darkred"
                        android:textColor="#fff"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>





    </LinearLayout>
</RelativeLayout>