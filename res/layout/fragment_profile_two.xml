<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/log"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="18dp"
        android:text="登录正事多"/>
    <RelativeLayout
        android:layout_below="@id/tv"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textSize="16dp"
            android:id="@+id/register"
            android:layout_width="130dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:text="注册"
            android:background="@drawable/fx_bg_btn_green"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/login"
            android:layout_width="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:text="登录"
            android:background="@drawable/fx_bg_btn_green"/>

        <RelativeLayout
            android:id="@+id/rl_fenge"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/login">
            <TextView
                android:layout_toLeftOf="@+id/tv_cen"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/tv_cen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速登录"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_toRightOf="@+id/tv_cen"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@color/black"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_qq"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/iv_wx"
            android:layout_marginRight="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_fenge"
            android:src="@drawable/qq_shouquan"/>
        <ImageView
            android:id="@+id/iv_wx"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_fenge"
            android:src="@drawable/weixin"/>
        <ImageView
            android:id="@+id/iv_wb"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_wx"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_fenge"
            android:src="@drawable/sina_weibo"/>
    </RelativeLayout>

</RelativeLayout>
