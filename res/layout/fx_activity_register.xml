<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_topbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入验证码"
        android:textSize="18dp"
        android:textColor="#000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码已发送到"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sangu.apptongji.main.widget.IdentifyingCodeView
            android:id="@+id/icv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:icv_et_bg_focus="@drawable/shape_icv_et_bg_focus"
            app:icv_et_bg_normal="@drawable/shape_icv_et_bg_normal"
            app:icv_et_divider_drawable="@drawable/shape_divider_identifying"
            app:icv_et_number="6"
            app:icv_et_text_color="#000000"
            app:icv_et_width="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tishi"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:layout_height="wrap_content"
            android:text="1、收不到验证码？你可以尝试:"
            android:textSize="16dp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_tishi2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_tishi"
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:layout_height="wrap_content"
            android:text="2、注意查看短信是否被拦截"
            android:textSize="16dp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_tishi3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_tishi2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:layout_height="wrap_content"
            android:text="3、请允许“所有权限”,禁止可能造成无法正常使用"
            android:textSize="16dp"
            android:textColor="@color/gray"/>
        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tishi3">
            <Button
                android:id="@+id/btn_congfa"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_btn_gray"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="重新发送"
                android:textSize="16dp"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_kefu"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btn_congfa"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_btn_gray"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="发送短信给客服"
                android:textSize="16dp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_zhuce"
            android:visibility="gone"
            android:layout_below="@+id/tv_tishi3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:id="@+id/btn_wancheng"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="完成注册"
                android:textSize="16dp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
