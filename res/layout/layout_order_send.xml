<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fx_bg_btn_white"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ll"
            android:background="@drawable/fx_bg_btn_white"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_tishi"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:text="提示：本次派单将不向对方收取信息服务费"/>
            <android.view.View
                android:id="@+id/v1"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item1"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="进入手机通讯录"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

            </RelativeLayout>
            <android.view.View
                android:id="@+id/v2"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item2"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入正事多通讯录"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <android.view.View
                android:id="@+id/v3"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item3"
                android:layout_below="@+id/ll"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/et_phone3"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:paddingRight="40dp"
                    android:hint="输 入 手 机 号"
                    android:inputType="number"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/login_input"/>
                <Button
                    android:id="@+id/btn_phone3"
                    android:layout_alignRight="@+id/et_phone3"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:text="发送"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:background="@null"/>
            </RelativeLayout>
            <android.view.View
                android:id="@+id/v4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item4"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="取      消"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
