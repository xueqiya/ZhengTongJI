<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#fff"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/common_top_bar_blue">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fx_top_bar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="订单详情"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_back"
                android:text="详情资料"
                android:textColor="@color/gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_fasong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:text="发送"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/accent_blue"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:id="@+id/et_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="订单描述:"
                android:gravity="top|left"
                android:textSize="16dp"
                android:textColor="#000"
                android:minHeight="100dp"
                android:background="@drawable/login_input"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_note"
                android:layout_marginTop="5dp"
                android:text="待处理信息:(图片)"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_gv1"
                android:layout_below="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gv2"
                android:layout_below="@+id/ll_gv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:id="@+id/rl_xinxi"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_input">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="姓名:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:hint="输入客户姓名"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="电话:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:hint="输入客户电话"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_dizhi"
                    android:layout_below="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="地址:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_below="@+id/tv_phone"
                    android:layout_toRightOf="@+id/tv_dizhi"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_dizhi"
                        android:layout_width="match_parent"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:hint="输入客户地址"
                        android:background="@null"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_zhifuxianshi"
                android:text="费  用:"
                android:layout_centerVertical="true"
                android:gravity="center|left"
                android:textSize="16dp"
                android:textColor="@color/accent_blue"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/et_feiyong"
                android:layout_toRightOf="@+id/tv_zhifuxianshi"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/accent_blue"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_input"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_note4"
                android:text="元"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/et_feiyong"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textColor="@color/accent_blue"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <RelativeLayout
                android:id="@+id/rl_ticheng"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_note4"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:layout_marginBottom="2dp">
                <TextView
                    android:id="@+id/tv_tem_qiyetc"
                    android:text="X"
                    android:textSize="9dp"
                    android:textColor="@color/accent_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_qiye_ticheng"
                    android:text="0%"
                    android:layout_toRightOf="@+id/tv_tem_qiyetc"
                    android:layout_marginLeft="2dp"
                    android:textSize="10dp"
                    android:textColor="@color/accent_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt1"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="约定时间"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    />
                <RelativeLayout
                    android:id="@+id/countDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text="0天"/>
                    <TextView
                        android:id="@+id/tv_hours"
                        android:layout_toRightOf="@+id/tv_days"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text="00"/>
                    <TextView
                        android:id="@+id/tv_maohao1"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_mins"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_maohao1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text="00"/>
                    <TextView
                        android:id="@+id/tv_maohao2"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_mills"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_maohao2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/accent_red"
                        android:textSize="16dp"
                        android:text="00"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginTop="5dp"
                    android:text="未设置"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:layout_below="@+id/tv2"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_jiantou"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fuzejiantouthree"/>

            <LinearLayout
                android:id="@+id/ll1_paidan"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_kehu"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_kehu"
                        android:clickable="true"
                        android:text="客户"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        />
                    <TextView
                        android:id="@+id/tev_kehu"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/accent_oriange"
                        android:layout_below="@+id/tv_kehu"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="下单:"/>
                    <TextView
                        android:id="@+id/tv_kehu_time"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tev_kehu"
                        android:layout_below="@+id/tv_kehu"
                        android:textColor="@color/accent_oriange"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:text="2016-11-25 15:30"/>
                </RelativeLayout>

                <android.view.View
                    android:id="@+id/v8"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_xiadan_qiye"
                    android:layout_width="0.1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:background="#000"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_jiedan"
                        android:clickable="true"
                        android:text="接单人"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/tev_jiedan"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_jiedan"
                        android:textColor="@color/accent_oriange"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="交单:"/>
                    <TextView
                        android:id="@+id/tv_jiedan_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/tev_jiedan"
                        android:layout_below="@+id/tv_jiedan"
                        android:textColor="@color/accent_oriange"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:text="2016-11-25 15:30"/>

                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_jiedan"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll3_paidan"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_below="@+id/ll1_paidan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.view.View
                    android:id="@+id/v17"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#000"
                    android:layout_below="@+id/ll1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_id1"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="centerInside"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_paidan_id1"
                        android:layout_width="match_parent"
                        android:text="签名区"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:clickable="true"
                        android:textSize="20dp"
                        android:layout_height="120dp">
                    </TextView>
                    <RelativeLayout
                        android:id="@+id/rl_paidan_id1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paidan_id1"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/tev_paidan_id1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accent_oriange"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:text="确认:"/>
                        <TextView
                            android:id="@+id/tv_paidan_id1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tev_paidan_id1"
                            android:textColor="@color/accent_oriange"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:text="2016-11-25 15:30"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/ll1_paidan"
                android:orientation="horizontal">
                <android.view.View
                    android:id="@+id/v12"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/pv_xiadan"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#000"/>
                <android.view.View
                    android:id="@+id/v13"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/pv_xiadan"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2_paidan"
                android:visibility="gone"
                android:gravity="center"
                android:layout_below="@+id/ll1_paidan"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_caiwu"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_paidan_caiwu"
                        android:layout_width="match_parent"
                        android:text="签名区"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:clickable="true"
                        android:textSize="20dp"
                        android:layout_height="120dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tev_paidan_caiwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_below="@+id/tv_paidan_caiwu"
                        android:textColor="@color/accent_oriange"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="确认:"/>
                    <TextView
                        android:id="@+id/tv_paidan_caiwu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/tev_paidan_caiwu"
                        android:layout_below="@+id/tv_paidan_caiwu"
                        android:textColor="@color/accent_oriange"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:text="2016-11-25 15:30"/>
                </RelativeLayout>

                <android.view.View
                    android:id="@+id/v9"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_xiadan_qiye"
                    android:layout_width="0.1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:background="#000"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tev_paidan_kehu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paidan_kehu"
                        android:textColor="@color/accent_oriange"
                        android:textSize="14dp"
                        android:visibility="invisible"
                        android:layout_marginLeft="10dp"
                        android:text="确认:"/>
                    <TextView
                        android:id="@+id/tv_paidan_kehu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tev_paidan_kehu"
                        android:layout_below="@+id/tv_paidan_kehu"
                        android:textColor="@color/accent_oriange"
                        android:textSize="14dp"
                        android:visibility="invisible"
                        android:layout_marginLeft="10dp"
