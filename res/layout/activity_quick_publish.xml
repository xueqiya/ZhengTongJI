<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/iv_back"
            android:textColor="@color/gray"
            android:text="返回"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="极速派单"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tl_edit_contain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/login_input"
        android:gravity="center"

        >
        <EditText
            android:id="@+id/et_quick_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="top|left"
            android:textSize="14dp"
            android:hint="描述您的需求"
            android:textColor="@color/black"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yuyin_contain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@color/orange"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ease_chatfrom_voice_playing_f3"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_yuyin_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@android:color/white"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="点击试听"
                android:textColor="@android:color/white"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:textSize="15sp"
                />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <com.sangu.apptongji.widget.AudioRecorderButton
            android:id="@+id/btn_voice"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_luyin"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2_quick_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/tv_quick_send"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/fx_bg_text_orange_2"
            android:gravity="center"
            android:text="极速派单"
            android:textSize="25dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl2"
        android:layout_centerHorizontal="true"
        android:text="在线的电子单据更有保障"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>