            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_before"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:text="服务前图"
                    android:textColor="@color/black_deep"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/image_before"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <Button
                    android:visibility="invisible"
                    android:id="@+id/bt_leftadd"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_alignTop="@id/image_before"
                    android:layout_alignLeft="@id/image_before"
                    android:textColor="@color/light_grey"
                    android:text="+"
                    android:background="@color/white"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <Button
                    android:visibility="invisible"
                    android:id="@+id/bt_leftdelete"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_alignTop="@id/image_before"
                    android:layout_alignRight="@id/image_before"
                    android:textColor="@color/light_grey"
                    android:text="-"
                    android:background="@color/white"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
