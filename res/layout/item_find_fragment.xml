<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="0.1dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="60dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="姓名" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_alignTop="@+id/rl_qiye"
            android:layout_alignBottom="@+id/rl_qiye"
            android:background="#fff"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/tv_nianling"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_height="wrap_content"
                android:background="@color/accent_blue"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10dp"
                android:ellipsize="end"
                android:textColor="#fff"
                android:text="23"/>

            <ImageView
                android:visibility="gone"
                android:paddingLeft="8dp"
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nan"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_recomIdentify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_sex"
            android:layout_marginLeft="5dp"
            android:layout_alignStart="@+id/rl_sex"
            android:text="提示：无承诺保障"
            android:textColor="@color/light_grey"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_recomIdentify2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_sex"
            android:layout_marginTop="2dp"
            android:layout_alignStart="@+id/rl_sex"
            android:background="@drawable/btn_corner_orange"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="invisible" />


        <RelativeLayout
            android:id="@+id/rl_qiye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_sex"
            android:layout_alignTop="@+id/tv_name">
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/text_grey"
                android:textSize="14dp"
                android:text="公司"/>

            <TextView
                android:id="@+id/tv_company_count"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_company"
                android:textColor="@color/text_grey"
                android:maxLines="1"
                android:gravity="center|right"
                android:textSize="13dp"
                android:text="(0人)"/>

            <TextView
                android:id="@+id/tv_recommendMark"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />

        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_grey"
            android:layout_alignTop="@+id/tv_name"
            android:text="一天前"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_sex"
            android:layout_alignLeft="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_all_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_marginTop="5dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_project_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp"
                        android:text="专业项目一"/>
                    <TextView
                        android:id="@+id/iv_zy1_tupian"
                        android:text="图"
                        android:textSize="7dp"
                        android:layout_gravity="center"
                        android:background="#FFAA4C"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        />
                    <TextView
                        android:id="@+id/tv_zy1_bao"
                        android:text="保"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textSize="7dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                    <TextView
                        android:id="@+id/tv_zy1_bu"
                        android:text="补"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="1dp"
                        android:visibility="gone"
                        android:textSize="7dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_marginTop="5dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp"
                        android:text="专业项目二"
                        android:layout_alignTop="@+id/ll_one"
                        />

                    <TextView
                        android:id="@+id/iv_zy2_tupian"
                        android:text="图"
                        android:textSize="7dp"
                        android:background="#FFAA4C"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        />
                    <TextView
                        android:id="@+id/tv_zy2_bao"
                        android:text="保"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                    <TextView
                        android:id="@+id/tv_zy2_bu"
                        android:text="补"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:textSize="7dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_two_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/ll_all_one"
                android:layout_below="@+id/ll_all_one">
                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_project_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp"
                        android:text="专业项目三"/>
                    <TextView
                        android:id="@+id/iv_zy3_tupian"
                        android:text="图"
                        android:textSize="7dp"
                        android:layout_gravity="center"
                        android:background="#FFAA4C"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        />
                    <TextView
                        android:id="@+id/tv_zy3_bao"
                        android:text="保"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textSize="7dp"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                    <TextView
                        android:id="@+id/tv_zy3_bu"
                        android:text="补"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textSize="7dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_all_one">
                    <TextView
                        android:id="@+id/tv_project_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp"
                        android:text="专业项目四"/>
                    <TextView
                        android:id="@+id/iv_zy4_tupian"
                        android:text="图"
                        android:textSize="7dp"
                        android:background="#FFAA4C"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_zy4_bao"
                        android:text="保"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="7dp"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                    <TextView
                        android:id="@+id/tv_zy4_bu"
                        android:text="补"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textSize="7dp"
                        android:textColor="#fff"
                        android:background="@color/accent_red"
                        android:layout_width="11dp"
                        android:layout_height="11dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2_botom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/rl"
            android:layout_alignLeft="@+id/rl_sex">
            <TextView
                android:id="@+id/tv_qianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_distance"
                android:textColor="@color/text_grey"
                android:textSize="14dp"
                android:text="jintianhuigenghao"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.02km"
                android:textSize="14dp"
                android:textColor="@color/text_grey"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_titl"
            android:visibility="invisible"
            android:background="@drawable/fx_bg_text_gra"
            android:text="张三封"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name" />

        <com.sangu.apptongji.widget.CircleImageView
            android:visibility="visible"
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:transitionName="share"
            android:layout_alignTop="@+id/tv_titl"
            android:layout_alignStart="@+id/tv_titl" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_advert"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

</LinearLayout>
