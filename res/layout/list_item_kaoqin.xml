<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"
        android:background="#fff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_titl"
                android:visibility="invisible"
                android:background="@drawable/fx_bg_text_gra"
                android:text="张三封"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/iv_head"
                android:visibility="visible"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:text="姓名："
                android:textSize="16dp"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name_title"
                android:textColor="#000"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:text="外卖配送"/>

            <TextView
                android:id="@+id/tv_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_title"
                android:layout_alignLeft="@+id/tv_name_title"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:textSize="16dp"
                android:text="总价："/>
            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_title"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_alignLeft="@+id/tv_name"
                android:text="500元"/>

            <TextView
                android:id="@+id/tv_dingdanzhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易中"
                android:textColor="@color/red"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
