<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/group_avatar"
    android:layout_height="@dimen/group_avatar"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.sangu.apptongji.widget.CircleImageView
        android:id="@+id/iv_avatar1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/fx_default_useravatar" />

    <com.sangu.apptongji.widget.CircleImageView
        android:id="@+id/iv_avatar2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_avatar1"
        android:src="@drawable/fx_default_useravatar" />


</LinearLayout>