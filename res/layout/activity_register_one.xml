<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_topbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商务社交-诚信为本"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:id="@+id/rl_touxiang"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#B4B4B4">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fx_icon_add_normal"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_touxiang"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="添加头像"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="真实姓名:"
                android:textSize="18dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="(非实名用户可能会影响交易以及提现)"
                android:textSize="15dp"
                android:textColor="@color/accent_oriange"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_name"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@null"
            android:hint="输入姓名"
            android:layout_below="@+id/ll_name"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/et_name"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:id="@+id/ll_name2"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="填写专业/行业/品牌或产品:"
                android:textSize="18dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="(不“接单”用户，请填写“无”)"
                android:textSize="15sp"
                android:textColor="@color/accent_oriange"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_zhuanye"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:hint="长度最多6位"
            android:layout_below="@+id/ll_name2"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/et_zhuanye"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/et_birth"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="选择生日"
            android:background="@null"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/et_birth"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioGroup
            android:id="@+id/reg_baseinfo_rg_gender"
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right|center"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.0dip"
                    android:text="男"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />
                <RadioButton
                    android:id="@+id/reg_baseinfo_rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#000"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="女"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />
                <RadioButton
                    android:id="@+id/reg_baseinfo_rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </RadioGroup>
        <TextView
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/reg_baseinfo_rg_gender"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="使用接单/派单/提现功能，请使用实名"
        android:textSize="16dp"
        android:textColor="@color/accent_oriange"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/fx_bg_btn_green"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="下一步"
        android:textSize="16dp"
        android:textColor="#fff"/>

</LinearLayout>
