<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:background="#f7f7f7"
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radioGS"
                android:layout_width="match_parent"
                android:text="禁登录"
                android:background="#fff"
                android:checked="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/v2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/crop__selector_focused"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radioEP"
                android:layout_width="match_parent"
                android:text="禁提现"
                android:background="#fff"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/v3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/crop__selector_focused"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/radioBT"
                android:layout_width="match_parent"
                android:text="禁派单"
                android:background="#fff"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/v4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/crop__selector_focused"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/radioSS"
                android:layout_width="match_parent"
                android:text="禁动态"
                android:visibility="visible"
                android:background="#fff"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_new_hongbao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/red_packeg"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v5"
        android:layout_below="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#000000"/>
    <RelativeLayout
        android:id="@+id/id_stickynavlayout_viewpager"
        android:layout_below="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@id/id_stickynavlayout_innerscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_clear"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/btn_register_pressed"
        android:text="清 空 搜 索"
        android:textSize="16dp"
        android:textColor="#fff"/>
</RelativeLayout>
