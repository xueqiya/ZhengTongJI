<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#f7f7f7" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="个人详情"
            android:textColor="@color/gray"
            android:textSize="17dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:text="实名认证"
            android:textColor="#000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改"
            android:visibility="invisible"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/accent_blue"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="真实姓名:"
                    android:textColor="#000"
                    android:id="@+id/textView1" />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_input"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入您的真实姓名"
                    android:paddingLeft="10dip"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textColorHint="#ffdddddd" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="身份证号:"
                    android:textColor="#000"
                    android:id="@+id/textView2" />
                <EditText
                    android:id="@+id/et_shenfenzheng"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_input"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入您的有效身份证号码"
                    android:paddingLeft="10dip"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textColorHint="#ffdddddd" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll4_kaihu"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="  开户行:  "
                    android:textColor="#000"
                    android:id="@+id/textView_kaihu" />
                <EditText

                    android:id="@+id/et_kaihuhang"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_input"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入您的开户行"
                    android:paddingLeft="10dip"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textColorHint="#ffdddddd" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll4"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="银行卡号:"
                    android:textColor="#000"
                    android:id="@+id/textView4" />
                <EditText

                    android:id="@+id/et_yinhangka"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_input"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入您的银行卡号"
                    android:paddingLeft="10dip"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textColorHint="#ffdddddd" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="联系方式:"
                    android:textColor="#000"
                    android:id="@+id/textView3" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_input"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入银行预留手机号"
                    android:paddingLeft="10dip"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textColorHint="#ffdddddd" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl6"
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="身份证正反面 :"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:id="@+id/textView6" />
                <LinearLayout
                    android:id="@+id/rl_shenfenzheng"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:layout_below="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp">
                        //delet_zhaopian_1x
                        <ImageView
                            android:id="@+id/iv_zhengmian"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fx_icon_add"/>
                        <ImageView
                            android:id="@+id/iv_del1"
                            android:visibility="gone"
                            android:paddingRight="10dp"
                            android:paddingTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/delet_zhaopian_1x" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp">
                        <ImageView
                            android:id="@+id/iv_fanmian"
                            android:layout_marginLeft="5dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fx_icon_add"/>
                        <ImageView
                            android:id="@+id/iv_del2"
                            android:visibility="gone"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/delet_zhaopian_1x" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/rl_shenfenzheng"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:text="身份证正面"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:text="身份证反面"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_hand_shenfenzheng"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:background="#fff"
                    android:layout_below="@+id/rl_shenfenzheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp">
                        //delet_zhaopian_1x
                        <ImageView
                            android:id="@+id/iv_hand_zhengmian"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fx_icon_add"/>
                        <ImageView
                            android:id="@+id/iv_hand_del1"
                            android:visibility="gone"
                            android:paddingRight="10dp"
                            android:paddingTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/delet_zhaopian_1x" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp">
                        <ImageView
                            android:id="@+id/iv_hand_fanmian"
                            android:layout_marginLeft="5dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fx_icon_add"/>
                        <ImageView
                            android:id="@+id/iv_hand_del2"
                            android:visibility="gone"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/delet_zhaopian_1x" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/rl_hand_shenfenzheng"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:text="手持身份证正面"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:text="手持身份证反面"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:textSize="16dp"
                    android:background="@drawable/fx_bg_btn_gray"
                    android:textColor="#fff"
                    android:text="提交认证"/>
                <TextView
                    android:id="@+id/tv_zhuangtai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:visibility="invisible"
                    android:textColor="@color/accent_red"
                    android:text="审核状态：审核中"/>
                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_below="@+id/tv_zhuangtai"
                    android:textSize="14dp"
                    android:textColor="@color/accent_red"
                    android:text="认证有误"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textSize="16dp"
                android:textColor="@color/accent_blue"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
