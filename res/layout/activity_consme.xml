<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="我的消费"
            android:textColor="@color/gray"
            android:textSize="18dp" />
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:background="#f7f7f7"
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        >
        <RelativeLayout
            android:id="@+id/rl_yanzi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioUAll"
                android:layout_width="match_parent"
                android:text="交易中"
                android:background="#fff"
                android:textColor="@color/em_main_botton_text_color"
                android:gravity="center"
                android:textSize="17dp"
                android:button="@null"
                android:checked="true"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_unread_Uyanzi"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@+id/radioUAll"
                android:text="0"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:gravity="center"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff" />
            <View
                android:id="@+id/v4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_daiqian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioUWei"
                android:layout_width="match_parent"
                android:text="待签收"
                android:background="#fff"
                android:textColor="@color/em_main_botton_text_color"
                android:gravity="center"
                android:textSize="17dp"
                android:button="@null"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/tv_unread_Udaiqian"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="0"
                android:textSize="12dp"
                android:layout_alignRight="@+id/radioUWei"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:gravity="center"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff"
                android:layout_alignParentTop="true"
                />
            <View
                android:id="@+id/v3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_chengjiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioUYi"
                android:layout_width="match_parent"
                android:text="已结束"
                android:background="#fff"
                android:textColor="@color/em_main_botton_text_color"
                android:gravity="center"
                android:textSize="17dp"
                android:button="@null"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                />
            <View
                android:id="@+id/v0"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/radioUYi"
            android:layout_toEndOf="@+id/radioUYi">

            <RadioButton
                android:id="@+id/radioUTui"
                android:layout_width="match_parent"
                android:text="争议/售后"
                android:background="#fff"
                android:textColor="@color/em_main_botton_text_color"
                android:gravity="center"
                android:textSize="17dp"
                android:button="@null"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_unread_Utuikuan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@+id/radioUTui"
                android:text="0"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:gravity="center"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_myconsume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        </ListView>
        <TextView
            android:id="@+id/tv_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="暂无订单"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>