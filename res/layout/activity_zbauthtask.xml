<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="任务"
            android:textColor="@color/gray"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_fristType"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="发个五星好评"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/light_grey"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="告诉全国你的专业在哪个地区接单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_pushComent"
                android:text="去做任务"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="170dp"
                android:layout_height="32dp" />

        </RelativeLayout>



        <TextView
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="上传任务截图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/light_grey"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="告诉全国你的专业在哪个地区接单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/commentImage"
                android:src="@drawable/fx_icon_tag_add"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/light_grey"
            android:textSize="12dp"
            android:textAlignment="center"
            android:text="（注：截图评论内容）"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_midBtn"
                android:text="提交任务"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="170dp"
                android:layout_height="32dp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_secondType"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="软件试用任务"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_red"
            android:textSize="13dp"
            android:textAlignment="center"
            android:text="就是下载软件试用几分钟给点意见"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="第一步打开应用商店"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="搜索一下关键字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_searchKey"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="【招标】"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="第二步"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="找以下图标APP下载试用评论一下"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_pushDown"
                android:layout_below="@+id/image_logo"
                android:layout_marginTop="15dp"
                android:text="去做任务"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="170dp"
                android:layout_height="32dp" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="上传任务截图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_downImage1"
                    android:src="@drawable/fx_icon_tag_add"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_downImage2"
                    android:src="@drawable/fx_icon_tag_add"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_midBtn2"
                android:text="提交任务"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="170dp"
                android:layout_height="32dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_example"
            android:layout_marginTop="0dp"
            android:textSize="14dp"
            android:textAlignment="center"
            android:text="查看示例"
            android:textColor="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thridType"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="朋友圈点赞任务"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_red"
            android:textSize="13dp"
            android:textAlignment="center"
            android:text="帮介绍派单信息,积累五个赞,提交截图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="上传任务截图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/wechatImage"
                android:src="@drawable/fx_icon_tag_add"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_midBtn3"
                android:text="提交任务"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fx_bg_btn_green"
                android:layout_width="170dp"
                android:layout_height="32dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>