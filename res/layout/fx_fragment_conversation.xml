<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#f7f7f7" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:text="正事多"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_error_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_gonggao"
        android:layout_width="match_parent"
        android:layout_height="151dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#fff"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_jiedan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_jiedan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_unread_jiedan"
                    android:visibility="invisible"
                    android:layout_above="@+id/tv_jiedan"
                    android:layout_toRightOf="@+id/tv_jiedan"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/fx_bg_text_darkred"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00:00"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_paidan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_paidan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派单"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_unread_paidan"
                    android:visibility="invisible"
                    android:layout_above="@+id/tv_paidan"
                    android:layout_toRightOf="@+id/tv_paidan"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/fx_bg_text_darkred"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#fff"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_tongzhi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_tongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_unread_tongzhi"
                    android:visibility="invisible"
                    android:layout_above="@+id/tv_tongzhi"
                    android:layout_toRightOf="@+id/tv_tongzhi"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/fx_bg_text_darkred"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_count_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="26dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_baojia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/accent_blue"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报价"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>
    <com.fanxin.easeui.widget.EaseConversationList
        android:id="@+id/list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:divider="#dadada"
        android:dividerHeight="0.01dp"
        hyphenate:cvsListPrimaryTextSize="16dp" />

    <ListView
        android:id="@+id/listview_message"
        android:divider="#dadada"
        android:dividerHeight="0.01dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

</LinearLayout>