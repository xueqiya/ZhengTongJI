<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="#f7f7f7" >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fx_top_bar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/iv_back"
                android:text="联系人"
                android:textColor="@color/gray"
                android:textSize="17dp" />
            <Button
                android:id="@+id/btn_send"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fx_bg_btn_green"
                android:text="创建"
                android:textColor="#fff"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:text="注册单位"
                android:textColor="#000"
                android:textSize="19dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="单  位  全  称 :"
                android:textColor="#000"
                android:id="@+id/textView1" />
            <EditText
                android:id="@+id/et_qiye_qch"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_input"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="请输入单位全称"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="执 照 注 册 号 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView2" />
            <EditText
                android:id="@+id/et_gshzz_zhch"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/login_input"
                android:hint="请输入执照注册号"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="法 定 代 表 人 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView3" />

            <EditText
                android:id="@+id/et_fd_dbr"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/login_input"
                android:hint="请输入法人姓名"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="联  系  方  式 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView4" />
            <EditText
                android:id="@+id/et_lx_fsh"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:imeOptions="actionDone"
                android:background="@drawable/login_input"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll6"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="企  业  地  址 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView16" />
            <EditText
                android:id="@+id/et_qy_dz"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/login_input"
                android:hint="请点击选取公司地址"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="企  业  专  业 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView10" />
            <EditText
                android:id="@+id/et_tv_profession"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/login_input"
                android:hint="请输入专业"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="10dip"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="范围简介:"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView5" />
            <EditText
                android:id="@+id/et_jy_fw"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:gravity="left|top"
                android:background="@drawable/login_input"
                android:hint="请输入简介"
                android:singleLine="false"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="16dp"
                android:textColorHint="#ffdddddd" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="法人身份证正反面 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView6" />
            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:layout_below="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
                <ImageView
                    android:id="@+id/sdv_image1"
                    android:visibility="gone"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    />
                <ImageView
                    android:id="@+id/sdv_image2"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/sdv_image1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="营业执照 :"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:id="@+id/textView7" />
            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:layout_below="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
                <ImageView
                    android:id="@+id/sdv_image3"
                    android:visibility="gone"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_qiye_shenhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="企业正在审核中..."
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/accent_red"/>
    </LinearLayout>
</ScrollView>