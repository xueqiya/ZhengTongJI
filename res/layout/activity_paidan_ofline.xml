<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/common_top_bar_blue">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fx_top_bar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="信息服务单"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_back"
                android:text="派单列表"
                android:textColor="@color/gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:text="删除"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/accent_blue"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:id="@+id/et_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="订单描述:"
                android:gravity="top|left"
                android:textSize="16dp"
                android:textColor="#000"
                android:minHeight="100dp"
                android:background="@drawable/login_input"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_note"
                android:layout_marginTop="5dp"
                android:text="待处理信息:(图片)"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_gv1"
                android:layout_below="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gv2"
                android:layout_below="@+id/ll_gv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_below="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:id="@+id/rl_xinxi"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_input">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="姓名:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:hint="输入客户姓名"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="电话:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:hint="输入客户电话"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_dizhi"
                    android:layout_below="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="地址:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_below="@+id/tv_phone"
                    android:layout_toRightOf="@+id/tv_dizhi"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_dizhi"
                        android:layout_width="match_parent"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:hint="输入客户地址"
                        android:background="@null"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/rl_xinxi2"
                android:visibility="visible"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="5dp">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_feiyong"
                        android:textSize="20dp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:text="￥: 5元"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_note3"
                android:text="服  费:"
                android:gravity="center|left"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/et_feiyong"
                android:layout_toRightOf="@+id/tv_note3"
                android:layout_toLeftOf="@+id/tv_note4"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_input"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_note4"
                android:text="元"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <android.view.View
            android:id="@+id/v1"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll1_paidan"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_qiye"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_paidan_qiye"
                        android:clickable="true"
                        android:text="派单人(企业)"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        />
                    <TextView
                        android:id="@+id/tev_paidan_qiye"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/accent_red"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:layout_alignParentBottom="true"
                        android:text="派单:"/>
                    <TextView
                        android:id="@+id/tv_paidan_qiye_time"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tev_paidan_qiye"
                        android:textColor="@color/accent_red"
                        android:textSize="14dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:text="2016-11-25 15:30"/>
                </RelativeLayout>

                <android.view.View
                    android:id="@+id/v8"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_xiadan_qiye"
                    android:layout_width="0.1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:background="#000"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_paidan_qiyeren"
                        android:clickable="true"
                        android:text="接单人"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/tev_paidan_qiyeren"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paidan_qiyeren"
                        android:textColor="@color/accent_red"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="接单:"/>
                    <TextView
                        android:id="@+id/tv_paidan_qiyeren_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/tev_paidan_qiyeren"
                        android:layout_below="@+id/tv_paidan_qiyeren"
                        android:textColor="@color/accent_red"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:text="2016-11-25 15:30"/>

                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_qiyeren"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/ll1_paidan"
                android:orientation="horizontal">
                <android.view.View
                    android:id="@+id/v12"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/pv_xiadan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>
                <android.view.View
                    android:id="@+id/v13"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/pv_xiadan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2_paidan"
                android:gravity="center"
                android:layout_below="@+id/ll1_paidan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_caiwu"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_paidan_caiwu"
                        android:layout_width="match_parent"
                        android:text="财务"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:clickable="true"
                        android:textSize="20dp"
                        android:layout_height="120dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tev_paidan_caiwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paidan_caiwu"
                        android:textColor="@color/accent_red"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_paidan_caiwu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/tev_paidan_caiwu"
                        android:layout_below="@+id/tv_paidan_caiwu"
                        android:textColor="@color/accent_red"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:text="2016-11-25 15:30"/>
                </RelativeLayout>

                <android.view.View
                    android:id="@+id/v9"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_xiadan_qiye"
                    android:layout_width="0.1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:background="#000"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/iv_paidan_kehu"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="180dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_paidan_kehu"
                        android:clickable="true"
                        android:text="客户"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </TextView>
                    <TextView
                        android:id="@+id/tev_paidan_kehu"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paidan_kehu"
                        android:textColor="@color/accent_red"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:text="完成:"/>
                    <TextView
                        android:id="@+id/tv_paidan_kehu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/tev_paidan_kehu"
                        android:layout_below="@+id/tv_paidan_kehu"
                        android:textColor="@color/accent_red"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:text="2016-11-25 15:30"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_jiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fuzejiantoufour"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn_commit"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:background="@drawable/fx_bg_btn_green"
                android:text="派单"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>