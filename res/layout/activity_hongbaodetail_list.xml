<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/common_top_bar_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="选择朋友"
            android:textColor="@color/gray"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="余额"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="设置红包"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/accent_blue"/>
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/ll_all"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#f7f7f7"
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioShouru"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="收入"
                android:background="#fff"
                android:checked="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="16dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/v4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <RadioButton
                android:id="@+id/radioZhichu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="支出"
                android:background="#fff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="16dp"
                android:button="@null"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/ll_shxtu"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.youzan.zancharts.ZanLineChart
                android:id="@+id/line_chart"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="＜"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="＞"/>
            <TextView
                android:id="@+id/tv_tj_liulan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@+id/tv_tj_liulan_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/accent_blue"/>
            <TextView
                android:id="@+id/tv_tj_liulan_count"
                android:text="浏览0次"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_toLeftOf="@+id/tv_tj_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tj_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/orange"
                android:layout_centerHorizontal="true"
                android:text="(为主页设置红包增加转发跟浏览)"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tv_tj_zhufa"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_tj_center"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/dark_red"/>
            <TextView
                android:id="@+id/tv_tj_zhufa_count"
                android:text="转发0次"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/tv_tj_zhufa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:id="@+id/v3"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
