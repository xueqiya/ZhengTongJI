<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">
            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f7f7f7" >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:onClick="back"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fx_top_bar_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_back"
                    android:text="详情信息"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/tv_fenxiang"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/accent_blue"
                    android:text="分享"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_iv1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_iv2"
                android:layout_marginTop="5dp"
                android:background="#f7f7f7"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />
                <ImageView
                    android:id="@+id/iv8"
                    android:layout_marginRight="8dp"
                    android:layout_width="85dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_height="85dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/re_xm_Name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_xm_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="项目名称:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_xm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/tv_temp_xm_Name"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="未编写"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_bao_jine"
                    android:layout_below="@+id/re_xm_Name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_bao_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="质        保:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_bao_jine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/tv_temp_bao_jine"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="暂无"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_jiaoyiliang"
                    android:layout_below="@+id/re_bao_jine"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_jiaoyiliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="交  易  量:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_jiaoyiliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/tv_temp_jiaoyiliang"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="0次"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_jy_jine"
                    android:layout_below="@+id/re_jiaoyiliang"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_jy_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="交易金额:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_jy_jine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/tv_temp_jy_jine"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="0元"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_xm_jingyan"
                    android:layout_below="@+id/re_jiaoyiliang"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_xm_jingyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="项目经验:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"
                        android:id="@+id/view2" />

                    <TextView
                        android:id="@+id/tv_xm_jingyan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="0"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_temp_xm_jingyan"
                        android:layout_toEndOf="@+id/tv_temp_xm_jingyan" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_liulan_cishu"
                    android:layout_below="@+id/re_xm_jingyan"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_liulan_cishu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="浏览次数:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"
                        android:id="@+id/view3" />

                    <TextView
                        android:id="@+id/tv_liulan_cishu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="0次"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:layout_toRightOf="@id/tv_temp_liulan_cishu"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/view3"
                        android:layout_alignEnd="@+id/view3" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_zy_miaoshu"
                    android:layout_below="@+id/re_liulan_cishu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_temp_zy_miaoshu"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="他的描述:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_zy_miaoshu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@id/tv_temp_zy_miaoshu"
                        android:text="无"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/re_zy_miaoshu"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_weight="1"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_xiadan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fx_bg_btn_green"
            android:onClick="doClick"
            android:text="下单"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>