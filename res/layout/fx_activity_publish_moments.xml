                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_circle"
                        android:layout_alignRight="@+id/tv_remark"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_stroke_grey20"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/tv_identify"
                        android:visibility="invisible"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignTop="@+id/tv_circle"
                        android:layout_alignLeft="@+id/tv_circle"
                        android:background="@drawable/btn_corner_orange"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_hongbao"
