                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textv1"
                        android:layout_below="@+id/rl_jine"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginRight="10dip"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:id="@+id/rl_shuliang"
                        android:layout_below="@+id/textv1"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="单 个 金 额 "
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:typeface="serif" />

                        <EditText
                            android:id="@+id/et_baocang_shul"
                            android:layout_marginLeft="110dp"
                            android:textSize="15dp"
                            android:hint="设置单个宝藏金额"
                            android:textColor="@color/gray"
                            android:gravity="left|bottom"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/login_input"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textv2"
                        android:layout_below="@+id/rl_shuliang"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginRight="10dip"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:id="@+id/rl_tupian"
                        android:layout_below="@+id/textv2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
