                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="解 密 图 片 "
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:typeface="serif" />

                        <ImageView
                            android:id="@+id/iv_bz_tupian"
                            android:layout_marginLeft="110dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:src="@drawable/fx_icon_add"/>
                        <ImageView
                            android:id="@+id/iv_del"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/iv_bz_tupian"
                            android:layout_alignTop="@+id/iv_bz_tupian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/delet_zhaopian_1x" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textv3"
                        android:layout_below="@+id/rl_tupian"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginRight="10dip"
                        android:background="#E6E6E6" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_shh_A_xw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_switch_allpeople"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所有人可见"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:typeface="serif" />

                    <com.fanxin.easeui.widget.EaseSwitchButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_allpeople"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
                <RelativeLayout
                    android:id="@+id/rl_switch_onlyFriend"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="仅好友可见"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:typeface="serif" />

                    <com.fanxin.easeui.widget.EaseSwitchButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_onlyFriend"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_switch_onlyMyself"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="仅自己可见"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:typeface="serif" />

                    <com.fanxin.easeui.widget.EaseSwitchButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_onlyMyself"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shy_A_yh"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
