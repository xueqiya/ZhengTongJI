                        android:layout_width="match_parent"
                        android:gravity="left|center"
                        android:hint="店铺或者商品链接(选填)"
                        android:textSize="15dp"
                        android:background="@null"
                        android:layout_toRightOf="@+id/tv_linktitle"
                        android:layout_height="40dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/tv_shangpin_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/light_grey"
                        android:text="线上价:"/>
                    <EditText
                        android:id="@+id/et_shpjg"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:hint="0.00"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:background="@null"
                        android:layout_toRightOf="@+id/tv_shangpin_title"
                        android:layout_height="40dp" />


                    <TextView
                        android:id="@+id/tv_offlinetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/et_shpjg"
                        android:textSize="16dp"
                        android:textColor="@color/light_grey"
