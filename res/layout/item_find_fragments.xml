<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="0.1dp"
        android:layout_marginTop="2dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="姓名"
            android:textColor="#000"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_head"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_nianling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/accent_blue"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="23"
                android:textColor="#fff"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:src="@drawable/nan"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rl_sex"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="公司"
            android:textColor="@color/text_grey"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_company_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_company"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(0)"
            android:textColor="@color/text_grey"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginRight="5dp"
            android:text="一天前"
            android:textColor="@color/text_grey"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_sex"
            android:layout_below="@+id/rl_sex"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/ll_all_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="专业项目一"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy1_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy1_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy1_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ll_one"
                        android:text="专业项目二"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy2_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy2_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy2_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_all_one"
                android:layout_below="@+id/ll_all_one"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="专业项目三"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy3_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy3_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy3_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_all_one"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业项目四"
                        android:textColor="@color/color_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/iv_zy4_tupian"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="#FFAA4C"
                        android:gravity="center"
                        android:text="图"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy4_bao"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="保"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zy4_bu"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:background="@color/accent_red"
                        android:gravity="center"
                        android:text="补"
                        android:textColor="#fff"
                        android:textSize="7dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_sex"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_distance"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="jintianhuigenghao"
            android:textColor="@color/text_grey"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0.02km"
            android:textColor="@color/text_grey"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_titl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/fx_bg_text_gra"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="张三封"
            android:textColor="#fff"
            android:textSize="14dp"
            android:visibility="invisible" />

        <com.sangu.apptongji.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_alignTop="@+id/tv_titl"
            android:layout_below="@+id/tv_name"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_daohang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/fx_bg_btn_green"
            android:text="导航到这"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_xiangqing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/fx_bg_btn_green"
            android:text="看他详情"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
