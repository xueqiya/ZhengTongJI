<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="#00000000">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_centerInParent="true"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/red_packeg"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="正事多-名片红包"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_title1"
            android:text="0.00"
            android:textSize="22dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:paddingTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_title2"
            android:layout_below="@+id/tv_title1"
            android:text="0个"
            android:textSize="12dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_qq"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_title2"
            android:background="@drawable/fx_bg_btn_yellow"
            android:layout_centerHorizontal="true">
            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/ci_qq"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qq"/>
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="分享到空间"
                android:gravity="center"
                android:layout_toRightOf="@+id/ci_qq"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/dark_red"/>
            <ImageView
                android:id="@+id/iv_qq"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_qq"
                android:layout_centerVertical="true"
                android:src="@drawable/red_packeg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_qq"
            android:background="@drawable/fx_bg_btn_yellow"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="分享到微信"
                android:gravity="center"
                android:layout_toRightOf="@+id/ci_wx"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/dark_red"/>
            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/ci_wx"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weixin"/>
            <ImageView
                android:id="@+id/iv_wx"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_wx"
                android:layout_centerVertical="true"
                android:src="@drawable/red_packeg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_wb"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_wx"
            android:background="@drawable/fx_bg_btn_yellow"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="分享到微博"
                android:gravity="center"
                android:layout_toRightOf="@+id/ci_wb"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/dark_red"/>
            <com.sangu.apptongji.widget.CircleImageView
                android:id="@+id/ci_wb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weibo"/>
            <ImageView
                android:id="@+id/iv_wb"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_wb"
                android:layout_centerVertical="true"
                android:src="@drawable/red_packeg"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
