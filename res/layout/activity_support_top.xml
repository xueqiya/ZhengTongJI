<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="支持"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:id="@+id/textView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:layout_alignTop="@+id/textView23"
            android:layout_toEndOf="@+id/iv_back"
            android:id="@+id/textView24" />

    </RelativeLayout>

    <TextView
        android:textSize="25dp"
        android:textColor="@color/light_grey"
        android:textAlignment="center"
        android:text="支持奖励"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_jine"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:hint="0.00"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:numeric="decimal"/>

    </LinearLayout>

    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="100dp"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="top|left"
        android:textSize="14dp"
        android:hint="描述您的需求"
        android:textColor="@color/black"
        android:background="@drawable/login_input"/>

    <Button
        android:id="@+id/btn_nextClick"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="下一步"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/fx_bg_btn_green"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="提示:"
        android:textSize="20dp"
        android:textColor="#FF9300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="1、支持金额属于支持平台发展优化，无法退回"
        android:textSize="12dp"
        android:textColor="#FF9300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>