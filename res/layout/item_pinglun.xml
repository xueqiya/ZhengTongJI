<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_content_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_pinglun_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_pinglun"
            android:paddingBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="2017-03-28 11:56"
            android:textSize="13dp"
            android:textColor="#000"/>
        <RelativeLayout
            android:id="@+id/rl_click"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_content_pinglun"
            android:layout_alignBottom="@+id/tv_pinglun_time"/>
    </RelativeLayout>
</LinearLayout>
