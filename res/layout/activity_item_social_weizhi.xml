<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:windowSoftInputMode="adjustPan|stateHidden">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        android:background="#f7f7f7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="动态详情"
            android:textColor="@color/gray"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_delete_dynamic"
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:textColor="@color/accent_blue"
            android:text="删除"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scr_all"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        android:layout_below="@+id/rl_title"
        android:layout_above="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/rl_neirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_titl"
                        android:visibility="invisible"
                        android:background="@drawable/fx_bg_text_gra"
                        android:text="张三封"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <com.sangu.apptongji.widget.CircleImageView
                        android:id="@+id/sdv_image"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_toRightOf="@+id/sdv_image"
                        android:layout_marginLeft="10dp"
                        android:maxWidth="100dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黄方意"
                        android:textColor="#576B95"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_nianling"
                        android:layout_width="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_toRightOf="@+id/tv_nick"
                        android:layout_height="wrap_content"
                        android:background="@color/accent_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textSize="10dp"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:text="23"/>
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_toRightOf="@+id/tv_nianling"
                        android:layout_toLeftOf="@+id/tv_distance"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:textColor="@color/gray"
                        android:text="(暂未加入企业)"/>

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/sdv_image"
                        android:layout_below="@+id/tv_nick"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="一分钟前"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="0.0km"
                        android:layout_alignTop="@+id/tv_nick"
                        android:layout_alignBottom="@+id/tv_nick"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#CDCDCD"
                        android:textSize="14dp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_content"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:id="@+id/description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="10dp" >

                        <TextView
                            android:id="@+id/tv_content"
                            android:textColor="@color/black_deep"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_demandType"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignLeft="@+id/description_layout"
                        android:layout_alignTop="@+id/description_layout"
                        android:background="@drawable/btn_corner_weizhigreen"
                        android:gravity="center"
                        android:text="玩"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:id="@+id/rl_video"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/description_layout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="160dp">

                        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                            android:id="@+id/videoplayer"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_one"
                        android:layout_below="@+id/description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:maxHeight="80dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_1"
                                android:layout_margin="2dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_two"
                        android:layout_below="@+id/ll_one"
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_5"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_6"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_7"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/image_8"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="2dp"
                                android:visibility="gone"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="合肥市蜀山区黄山路105"
                        android:textColor="#576B95"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="删除"
                            android:textColor="#576B95"
                            android:textSize="12dp"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_pop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:padding="10dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/fx_icon_coment" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/ll_goodmembers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EEEEEE"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_margin="8dp"
                                android:src="@drawable/fx_icon_heart_blue" />

                            <TextView
                                android:id="@+id/tv_goodmembers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="黄方意，张三，李四，王五"
                                android:textColor="#576B95"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view_pop"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#D6D6D6"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_commentmembers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EEEEEE"
                            android:lineSpacingExtra="5dp"
                            android:padding="8dp"
                            android:text="张三：说得真好\n张三：说得真好\n张三：说得真好\n张三：说得真好"
                            android:textColor="#353535"
                            android:textSize="16dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/ll_content"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />
                <RelativeLayout
                    android:id="@+id/rl_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview1">
                    <TextView
                        android:id="@+id/bmapView2"
                        style="@style/chat_content_date_style"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@drawable/map_simple"
                        android:gravity="bottom|left"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:textColor="@android:color/white" />
                    <com.baidu.mapapi.map.TextureMapView
                        android:id="@+id/bmapView1"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:onClick="click"
                        android:clickable="true"
                        android:background="#fff"/>
                    <ImageView
                        android:id="@+id/iv_ditu"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_baozang"/>
                    <RelativeLayout
                        android:id="@+id/rl_geshu"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_geshu"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="37dp"
                            android:layout_marginTop="8dp"
                            android:text="1"
                            android:textSize="10dp"
                            android:paddingTop="8dp"
                            android:gravity="center|top"
                            android:textColor="#fff"
                            android:background="@drawable/icon_baozang"/>

                        <ImageView
                            android:id="@+id/iv_bz_type2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="visible"
                            android:scaleType="fitXY"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/baoxiang_close"/>

                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_bz_type"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:src="@drawable/baoxiang_close"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_zf_pl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/rl_map"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_zhuanfa"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_zhf"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_zhf"
                                android:layout_toRightOf="@+id/tv_title_zhf"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="1dp"
                        android:layout_below="@+id/ll_content"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_liulancishu"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_llcsh"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="浏览:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_llc"
                                android:layout_toRightOf="@+id/tv_title_llcsh"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="1dp"
                        android:layout_below="@+id/ll_content"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6" />
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_pinglun"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_title_pl"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="留言:"
                                android:textColor="@color/gray"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/tv_count_pl"
                                android:layout_toRightOf="@+id/tv_title_pl"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/gray"
                                android:textSize="15dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/ll_zf_pl"
                    android:layout_height="1dip"
                    android:background="#E6E6E6" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_stickynavlayout_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/id_stickynavlayout"
                    android:scrollbars="none"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"></ListView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/rl_type"
        android:background="#E6E6E6"
        android:layout_above="@+id/re_edittext2"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <LinearLayout
            android:background="#E6E6E6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_commentType1"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="建议方案"
                    android:background="@color/light_grey"
                    android:layout_centerInParent="true"
                    android:layout_width="70dp"
                    android:layout_height="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_commentType2"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="详情询问"
                    android:background="@color/light_grey"
                    android:layout_centerInParent="true"
                    android:layout_width="70dp"
                    android:layout_height="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_commentType3"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="讨论留言"
                    android:background="@color/light_grey"
                    android:layout_centerInParent="true"
                    android:layout_width="70dp"
                    android:layout_height="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_commentType4"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="投诉举报"
                    android:background="@color/light_grey"
                    android:layout_centerInParent="true"
                    android:layout_width="70dp"
                    android:layout_height="25dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/re_edittext2"
        android:layout_alignParentBottom="true"
        android:background="#E6E6E6"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="1"
            android:padding="3dp"
            android:textCursorDrawable="@null"
            />



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_send"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_type"
        android:background="#E6E6E6"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="43dp"
            android:layout_height="28dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fx_bg_btn_green"
            android:text="发布"
            android:textColor="#fff"
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_send2"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/fx_bg_btn_green"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="16dp" />

        <View
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/btn_send2"
            android:background="#c0c0c0" />

        <EditText
            android:id="@+id/et_comment2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/btn_send2"
            android:background="@null"
            android:gravity="center|left"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>