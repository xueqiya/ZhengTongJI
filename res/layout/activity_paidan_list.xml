<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        android:background="#f7f7f7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fx_top_bar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="正事多-派单"
            android:textColor="@color/gray"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="返回"
            android:textColor="@color/gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_trade_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="接单记录"
            android:textColor="@color/accent_blue"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="#f7f7f7"
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rb_baojia_to"
                android:layout_width="match_parent"
                android:text="派给我的"
                android:background="#fff"
                android:checked="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/unread_baojiato_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="5"
                android:textSize="10dp"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/v4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rb_baojia_from"
                android:layout_width="match_parent"
                android:text="我派出的"
                android:background="#fff"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/em_main_botton_text_color_red"
                android:gravity="center"
                android:textSize="15dp"
                android:button="@null"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/unread_baojiafrom_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="5"
                android:textSize="10dp"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/fx_bg_text_darkred"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/refresh_list"
        android:layout_width="match_parent"
        android:layout_above="@+id/tv_search_friends"
        android:layout_height="match_parent"/>

</LinearLayout>
