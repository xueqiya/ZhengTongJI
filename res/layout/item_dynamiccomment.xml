<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <com.sangu.apptongji.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@color/accent_blue"
            android:transitionName="share"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_notImageName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:background="@drawable/btn_corner_blue"
            android:gravity="center"
            android:lines="1"
            android:text="名字"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_recomIdentify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_userName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_userName"
            android:text="提示：无承诺保障"
            android:textColor="@color/light_grey"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_recomIdentify2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_recomIdentify"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_recomIdentify"
            android:background="@drawable/btn_corner_orange"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_pro"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="专业专业专业"
            android:textColor="@color/light_grey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_userName"
            android:layout_marginRight="10dp"
            android:text="赞(1)"
            android:textAlignment="textStart"
            android:textColor="@color/light_grey"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_userName"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_praise"
            android:text="奖"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_content_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_pro"
            android:layout_below="@+id/tv_pro"
            android:layout_marginRight="8dp"
            android:text="                1评论评论评论\n评论评论"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_commentType"
            android:layout_width="58dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/tv_content_pinglun"
            android:layout_alignTop="@+id/tv_content_pinglun"
            android:layout_marginTop="1dp"
            android:background="@color/dark_red"
            android:gravity="center"
            android:text="详情询问"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pinglun_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content_pinglun"
            android:layout_below="@+id/tv_content_pinglun"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:text="2017-03-28 11:56"
            android:textColor="@color/light_grey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_pinglun_time"
            android:layout_marginRight="8dp"
            android:text="0.5km"
            android:textColor="@color/light_grey"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/rl_pinglun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_pinglun_time"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_praise"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_head">

        </RelativeLayout>


        <ImageView
            android:id="@+id/image_advert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:visibility="gone">

        </ImageView>

    </RelativeLayout>

</LinearLayout>