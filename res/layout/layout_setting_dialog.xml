<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fx_bg_btn_white"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ll"
            android:background="@drawable/fx_bg_btn_white"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_tishi"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:text="提示：本次派单将不向对方收取信息服务费"/>
            <android.view.View
                android:id="@+id/v1"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item1"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/app_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_item1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="余 额 充 值"
                    android:textColor="@color/accent_blue"
                    android:textSize="16dp" />

            </RelativeLayout>
            <android.view.View
                android:id="@+id/v2"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item2"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="48dp"
                >
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/weixin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_item2"
                    android:layout_toRightOf="@+id/iv2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微 信 充 值"
                    android:textColor="@color/accent_blue"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <android.view.View
                android:id="@+id/v3"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/re_item5"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/zhifubao"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_item5"
                    android:layout_toRightOf="@+id/iv3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="支付宝充值"
                    android:textColor="@color/accent_blue"
                    android:textSize="16dp" />
                <android.view.View
                    android:id="@+id/v4"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_item4"
                android:layout_below="@+id/ll"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="取消"
                    android:textColor="@color/accent_blue"
                    android:textSize="16dp" />
                <android.view.View
                    android:id="@+id/v5"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_item3"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="取  消"
                    android:textColor="@color/accent_blue"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
